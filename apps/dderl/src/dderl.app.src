{application, dderl,
 [
  {description, "Web based tool for exploring databases"},
  {vsn, "1.0.3"},
  {registered, []},
  {applications, [kernel,
                  stdlib,
                  erlimem,
                  imem,
                  sqlparse
                 ]},
  {mod, { dderl_app, []}},
  {env, [ {interface, "0.0.0.0"}
        , {port, 8443}
        , {flash_fallback, true}
        , {ssl_certfile, "certs/server.crt"}
        , {ssl_cacertfile, "certs/cowboy-ca.crt"}
        , {ssl_keyfile, "certs/server.key"}
        ]}
 ]}.
