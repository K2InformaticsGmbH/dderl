    {cowboy,    "1.0.3",    {git, "https://github.com/K2InformaticsGmbH/cowboy.git",    {tag, "1.0.3"}}},
    {mimetypes, "1.0",      {git, "https://github.com/K2InformaticsGmbH/mimetypes.git", {tag, "1.0"}}},
    {erlimem,   "1.2.7",    {git, "https://github.com/K2InformaticsGmbH/erlimem.git",   {tag, "1.2.7"}}},
    {erloci,    "0.0.3",    {git, "https://github.com/K2InformaticsGmbH/erloci.git",    "324eb477bfe0a5d75d707820e7ef19d98b18fe96"}}
