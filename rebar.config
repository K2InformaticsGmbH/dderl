{cover_enabled, true}.

{ct_cover, true}.
{ct_use_short_names, true}.
{ct_verbose, true}.

{deps, [
    {erlimem, {git, "https://github.com/K2InformaticsGmbH/erlimem.git", {tag, "1.3.0"}}},
    {erloci, {git, "https://github.com/K2InformaticsGmbH/erloci.git", {tag, "0.1.0"}}},
    % RAW deps (not included in packaging)
    {erlpkg, {raw, {git, "https://github.com/K2InformaticsGmbH/erlpkg.git", {branch, "master"}}}},
    {esaml, {git, "https://github.com/K2InformaticsGmbH/esaml", {tag, "1.2.0"}}},
    {imem, {git, "https://github.com/K2InformaticsGmbH/imem.git", {tag, "1.7.0"}}},
    {mimetypes, {git, "https://github.com/K2InformaticsGmbH/mimetypes.git", {tag, "1.0"}}}
]}.
% {deps_error_on_conflict, true}.

{erl_opts, [
    {parse_transform, lager_transform},
    {parse_transform, imem_rec_pretty_pt}
]}.

{eunit_opts, [
    {report, {eunit_surefire, [{dir, "."}]}},
    {skip_deps, true},
    verbose
]}.

{plugins, [{rebar_raw_resource, {git, "git://github.com/basho/rebar_raw_resource.git", {branch, "master"}}}]}.

{recursive_cmds, [clean, eunit]}.

{xref_checks, [
    deprecated_functions,
    deprecated_function_calls,
    exports_not_used,
    locals_not_used,
    undefined_functions,
    undefined_function_calls
]}.
