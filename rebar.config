{dist_node, [
    {setcookie, 'dderl'},
    {name, 'dderl@127.0.0.1'}
]}.

{cover_enabled, true}.

{ct_cover, true}.
{ct_use_short_names, true}.
{ct_verbose, true}.

{deps, [
    {erlimem, {git, "https://github.com/K2InformaticsGmbH/erlimem.git", {branch, "rebar3"}}},
    {erloci, {git, "https://github.com/K2InformaticsGmbH/erloci.git", {branch, "rebar3"}}},
    {esaml, {git, "https://github.com/K2InformaticsGmbH/esaml", {branch, "rebar3"}}},
    {imem, {git, "https://github.com/K2InformaticsGmbH/imem.git", {branch, "rebar3"}}},
    {erlimem,  {git, "https://github.com/K2InformaticsGmbH/erlimem.git",  {branch, "rebar3"}}},
    {ranch, {git, "https://github.com/K2InformaticsGmbH/ranch.git", {tag, "1.3.2"}}},

    % freeze at 1.0.2 : higher versions has breaking changes for cowboy
    {cowlib, {git, "https://github.com/K2InformaticsGmbH/cowlib.git",    {tag, "1.0.2"}}},
    % freeze at 1.X.X : higher versions has backward inompatible changes
    {cowboy, {git, "https://github.com/K2InformaticsGmbH/cowboy.git",    {tag, "1.1.2"}}},

    % RAW deps (not included in packaging)
    {erlpkg, {raw, {git, "https://github.com/c-bik/erlpkg.git", {branch, "rebar3"}}}}
]}.

{deps_error_on_conflict, false}.

{erl_opts, [
    {parse_transform, lager_transform},
    {parse_transform, imem_rec_pretty_pt}
]}.

{eunit_opts, [
    {report, {eunit_surefire, [{dir, "."}]}},
    {skip_deps, true},
    verbose
]}.

{plugins, [{rebar_raw_resource, {git, "git://github.com/basho/rebar_raw_resource.git", {branch, "master"}}}]}.

{post_hooks, [{"win32", release, "powershell.exe -File post_release.ps1"},
              {"linux", release, "./post_release.sh"}]}.

{relx, [
    {release, {dderl, "1.8.0"}, [dderl]},

    {dev_mode, true},
    {exclude_modules, [{stdlib, [filename]}]},
    {extended_start_script, true},
    {include_erts, true},
    {include_src, false},

    {overlay_vars, "config/vars.config"},
%   {sys_config, "config/sys.config"},
%   {vm_args, "config/vm.args"},
    {overlay, [
        {mkdir, "{{imem_snapshot_dir}}"},
        {mkdir, "log"},

        {copy, "LICENSE", "LICENSE"},
        {copy, "README.md", "README.md"},
        {copy, "RELEASE-DDERL.md", "RELEASE-DDERL.md"},

        %% Copy base files for starting and interacting w/ node
        %{copy, "files/erl", "{{erts_vsn}}/bin/erl"},
        %{copy, "files/nodetool", "{{erts_vsn}}/bin/nodetool"},
        %{template, "files/env.sh", "lib/env.sh"},

        % dderl control scripts
%            {template, "files/env.sh", "lib/env.sh"},
%            {copy, "files/init.script", "etc/init.script"},
%            {template, "files/dderl", "bin/dderl"},

        % generating for windows
        {copy, "config/editconfs.escript", "bin/editconfs.escript"},
        {template, "config/sys.config", "releases/{{rel_vsn}}/sys.config"},
        {template, "config/vm.args", "releases/{{rel_vsn}}/vm.args"},

        % imem control scripts
        {template, "_build/default/lib/imem/scripts/imem", "bin/imem"},
        {copy, "_build/default/lib/imem/scripts/imem.escript", "bin/imem.escript"}
    ]}
]}.

{xref_checks, [
    deprecated_functions,
    deprecated_function_calls,
    exports_not_used,
    locals_not_used,
    undefined_functions,
    undefined_function_calls
]}.

{shell, [
    {apps, [dderl]},
    {config, "config/sys_shell.config"}
]}.
