%%-*- mode: erlang -*-
%% ex: ft=erlang
{recursive_cmds, [clean,eunit]}.
{erl_opts, [{parse_transform, lager_transform},
            {parse_transform, imem_rec_pretty_pt},
            {lager_extra_sinks, [access]}]}.
{eunit_opts, [{report, {eunit_surefire, [{dir, "."}]}}]}.
{cover_enabled, true}.
{ct_use_short_names, true}.
{deps, [
    % RAW deps (not included in packaging)
    {erlpkg,    ".*",       {git, "https://github.com/K2InformaticsGmbH/erlpkg.git",    "705b031f4ffb0baf2bc464d55787530b7fe295c4"}, [raw]},
    {imem,      "1.7.0",    {git, "https://github.com/K2InformaticsGmbH/imem.git",      master}},
    {esaml,     "2.0.0",    {git, "https://github.com/K2InformaticsGmbH/esaml",         {tag, "2.0.0"}}},
    % cowlib pulled manually to override in cowboy deps through git
    {cowlib,    "1.0.0",    {git, "https://github.com/K2InformaticsGmbH/cowlib.git",    {tag, "1.0.0"}}},
    {cowboy,    "1.0.3",    {git, "https://github.com/K2InformaticsGmbH/cowboy.git",    {tag, "1.0.3"}}},
    {mimetypes, "1.0",      {git, "https://github.com/K2InformaticsGmbH/mimetypes.git", {tag, "1.0"}}},
    {erlimem,   "1.2.9",    {git, "https://github.com/K2InformaticsGmbH/erlimem.git",   {tag, "1.2.9"}}},
    {erloci,    "0.0.3",    {git, "https://github.com/K2InformaticsGmbH/erloci.git",    master}}
]}.
